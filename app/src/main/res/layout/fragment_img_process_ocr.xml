<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imgProcessOCR.ImgProcessOCRFragment">

    <RelativeLayout
        android:id="@+id/lay_wrap_text_n_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="30"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_OK"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_dump"
        android:background="@android:color/holo_green_light"
        android:onClick="onclick_img_process"
        />

    <Button
        android:id="@+id/btn_again"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_AGAIN"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_dump"
        android:background="@android:color/holo_red_light"
        android:onClick="onclick_img_process"
        />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgview_result"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/lay_wrap_text_n_buttons"
        android:onClick="onclick_img_capture_preview_toggle"
        />

</RelativeLayout>
